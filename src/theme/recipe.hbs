<!doctype html>

<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{config.title}}</title>
    <meta name="description" content="{{config.description}}">
    <meta name="author" content="{{config.author}}">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/water.css@2/out/light.css">
    <script type="application/ld+json">
    {
      "@context": "https://schema.org/",
      "@type": "Recipe",
      "name": "{{recipe.name}}",
      "image": [
        "https://user-images.githubusercontent.com/9322214/197209446-c239fd9e-d3df-4aa3-9a1c-b6246ea47e27.png"
      ],
      "author": {
        "@type": "Person",
        "name": "{{config.author}}"
      },
      "datePublished": "{{config.date}}",
      "description": "{{recipe.name}} recipe made with ludeed's prandium",
      "recipeIngredient": [
        {{#each recipe.ingredients as |ingredient|}}
        "{{ingredient.amount}} {{ingredient.name}}" {{#unless @last}} , {{/unless}}
        {{/each}}      
        ],
      "recipeInstructions": [
        {{#each recipe.instructions}}
        {
          "@type": "HowToStep",
          "text": "{{this}}"
        }{{#unless @last}} , {{/unless}}
        {{/each}}
      ]
    }
    </script>

    <!-- Open Graph  -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="{{config.base_url}}/{{recipe.id}}.html">
    <meta property="og:title" content="{{recipe.name}}">
    <meta property="og:description" content="recipe for {{recipe.name}}, generated with ludeed's prandium">
    <meta property="og:image" itemprop="image" content="http://placekitten.com/320/320">


    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content="{{config.base_url}}/{{recipe.id}}.html">
    <meta property="twitter:title" content="{{recipe.name}}">
    <meta property="twitter:description" content="recipe for {{recipe.name}}, generated with ludeed's prandium">
    <meta property="twitter:image" content="http://placekitten.com/320/320">
</head>

<body>
    <header>
        <nav>
            <a class="brand" href="index.html">
                <h1 style="width: max-content;">{{config.title}}</h1>
            </a>
            <span class="separator"></span>
            <!-- a href="/list">Lista üõí</a>
            <a href="#news">Plano üìÖ</a-->
        </nav>
        <hr>
    </header>

    <article class="h-recipe">

        <h2 class="p-name">{{recipe.name}}</h2>
        <div style="display: flex; gap: 20px">
            <!--a style="align-self: center;" href="/list">Adicionar √† lista
                üõí</a>
            <a style="align-self: center;" href="#news">Adicionar ao plano üìÖ</a-->

        </div>

        <div class="recipe">

            <div class="recipe-ingredients">
                <h3>{{config.translations.ingredients}}</h3>
                <ul>
                    {{#each recipe.ingredients as |ingredient|}}
                    <li class="p-ingredient"><code>{{ingredient.amount}} </code> {{ingredient.name}} </li>
                    {{/each}}
                </ul>
            </div>

            <div class="recipe-instructions">
                <h3>{{config.translations.instructions}}</h3>
                <div class="e-instructions">
                    <ol class="alter">
                        {{#each recipe.instructions}}
                        <li>{{this}}</li>
                        {{/each}}
                    </ol>
                </div>
            </div>

        </div>
        <center>
            <img src="http://placekitten.com/320/320"></img>
        </center>
    </article>


    <footer>
        <span style="margin-right: auto;">Made with ‚ù§ and <a
                href="https://github.com/LudeeD/prandium">prandium</a></span>
        <span><a href={{config.author_url}}>{{config.author}}</a>, {{config.date}}</span>
    </footer>
    <hr>
</body>

<style>
    body {
        font-size: larger;
    }

    .separator {
        margin-left: auto;
    }

    footer {
        display: flex;
        justify-content: center;
    }

    nav {
        display: flex;
        align-items: baseline;
        gap: 20px;
    }

    .brand {
        color: black;
    }

    button {
        margin-right: 0;
    }

    a:hover {
        text-decoration: underline;
    }

    .alter>li:nth-child(odd) {
        background: #efefef;
    }

    .recipe {
        display: flex;
    }

    .recipe-instructions {
        width: 70%;
    }

    .recipe-ingredients {
        width: 30%;
    }

    @media only screen and (max-width: 600px) {
        body {
            font-size: medium;
        }

        nav {
            flex-wrap: wrap;
            justify-content: center;
            gap: 0px 20px;
        }

        h1 {
            margin-bottom: 0px;
        }

        .separator {
            display: none;
        }

        .recipe {
            flex-wrap: wrap;
        }

        .recipe-instructions {
            width: 100%;
        }

        .recipe-ingredients {
            width: 100%;
        }
    }
</style>

</html>